<div id="charts">
  <div id="countries_chart" class="simple_pie_chart" width='300px' height='100px'>
    <table>
      <tr>
        <th>Visited</th>
        <td><%= current_user.visited_countries.count %></td>
      </tr><tr>
        <th>Not Visited</th>
        <td><%= current_user.not_visited_countries.count %></td>
      </tr>
    </table>
  </div>

  <div id="visits_chart">
    <%= visits_over_time_line_graph_for(current_user) %>
  </div>
</div>