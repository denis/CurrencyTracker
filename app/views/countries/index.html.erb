<section>
  <div id="visited_countries_chart" class="simple_pie_chart" width='300px' height='100px'>
    <table>
      <tr>
        <th>Visited</th>
        <td><%= current_user.visited_countries.count %></td>
      </tr><tr>
        <th>Not Visited</th>
        <td><%= current_user.not_visited_countries.count %></td>
      </tr>
    </table>
  </div>

  <h1>Countries</h1>

  <%= form_tag create_multiple_visits_path do %>
    <table>
      <tr>
        <th></th>
        <th>Name <input type="text" class="filter" /></th>
        <th>Code</th>
        <th>Status</th>
        <th></th>
      </tr>

      <% @countries.each do |country| %>
        <tr>
          <td><%= check_box_tag('country_codes[]', country.code) unless country.visited_by?(current_user) %></td>
          <td class="name"><%= country.name %></td>
          <td><%= country.code %></td>
          <td><%= country.visited_by?(current_user) ? 'Visited' : 'Not Visited' %></td>
          <td><%= link_to 'Show', country %></td>
        </tr>
      <% end %>
    </table>

    <p>
      <%= submit_tag 'Visit' %>
      <input type="button" id="check_all" value="Check All" />
      <input type="button" id="clear_all" value="Clear All" />
    </p>
  <% end %>
</section>